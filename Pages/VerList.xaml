<Page x:Class="FSM3.Pages.VerList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FSM3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VerList" Loaded="Load">

    <Grid>
        <ListBox x:Name="pathlist" HorizontalAlignment="Left" Height="380" Margin="9,8,0,0" VerticalAlignment="Top" Width="360" SelectionChanged="pathlist_SelectionChanged" MouseUp="MouseUp">
            <ListBox.Background>
                <ImageBrush/>
            </ListBox.Background>
        </ListBox>
        <ListBox x:Name="vlist" HorizontalAlignment="Left" Height="380" Margin="375,8,0,0" VerticalAlignment="Top" Width="375" SelectionChanged="vlist_SelectionChanged" PreviewMouseLeftButtonDown="vlist_PreviewMouseLeftButtonDown">
            <ListBox.Background>
                <ImageBrush/>
            </ListBox.Background>
        </ListBox>
        <Button Content="新增游戏文件夹" HorizontalAlignment="Left" Height="37" Margin="9,394,0,0" VerticalAlignment="Top" Width="145" Click="Button_Click_1"/>
        <Button Content="删除选中文件夹" HorizontalAlignment="Left" Height="37" Style="{StaticResource AccentButtonStyle}" Margin="160,394,0,0" VerticalAlignment="Top" Width="145" Foreground="White" BorderBrush="Red" Click="Button_Click" IsEnabled="False">
            <Button.Background>
                <SolidColorBrush Color="#FFFD0000" Opacity="0.66"/>
            </Button.Background>
        </Button>
        <Label Content="呜..部分功能仍在施工,用不了哦" HorizontalAlignment="Left" Margin="334,404,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
