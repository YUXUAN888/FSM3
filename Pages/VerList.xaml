<Page x:Class="FSM3.Pages.VerList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FSM3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VerList">

    <Grid>
        <ListBox HorizontalAlignment="Left" Height="385" Margin="9,8,0,0" VerticalAlignment="Top" Width="374">
            <ListBox.Background>
                <ImageBrush/>
            </ListBox.Background>
        </ListBox>
        <ListBox HorizontalAlignment="Left" Height="385" Margin="385,8,0,0" VerticalAlignment="Top" Width="409">
            <ListBox.Background>
                <ImageBrush/>
            </ListBox.Background>
        </ListBox>
        <Button Content="新增游戏文件夹" HorizontalAlignment="Left" Height="37" Margin="9,397,0,0" VerticalAlignment="Top" Width="145"/>
        <Button Content="删除选中文件夹" HorizontalAlignment="Left" Height="37" Style="{StaticResource AccentButtonStyle}" Margin="160,397,0,0" VerticalAlignment="Top" Width="145" Foreground="White" BorderBrush="Red">
            <Button.Background>
                <SolidColorBrush Color="#FFFD0000" Opacity="0.66"/>
            </Button.Background>
        </Button>

    </Grid>
</Page>
